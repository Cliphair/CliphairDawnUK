{{ 'logo-list.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .logo-list {
    padding: 15px 0;
  }
  #{{ section.id }} {
    background-color: {{ section.settings.background_color }};
  }
  #{{ section.id }} .logoList--item_text {
    color: {{ section.settings.text_color }};
  }
{%- endstyle -%}

<div class="logo-list" id="{{ section.id }}">
  <div class="logoList--container images-{{ section.settings.images_per_row }} page-width">
    <ul>
      {%- for block in section.blocks -%}
        <li class="logoList--item">
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}">
          {%- endif -%}
          {%- if block.settings.image != blank and block.settings.image.src != blank -%}
            <img
              srcset="{{ block.settings.image | image_url: width: block.settings.image_width }}"
              src="{{ block.settings.image | image_url: width: 190 }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
              width="auto"
              height="70"
            >
            {% if block.settings.text_label != null %}
              <span class="logoList--item_text">{{ block.settings.text_label }}</span>
            {%- endif -%}
          {%- else -%}
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Logo list",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f4f4f4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#121212"
    },
    {
      "type": "number",
      "id": "images_per_row",
      "label": "Images per row",
      "default": 4
    }
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text_label",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo list",
      "category": "Image",
      "blocks": [
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        }
      ]
    }
  ]
}
{% endschema %}
