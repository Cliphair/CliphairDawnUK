{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<style>
  .marquee {
    display: flex;
    overflow: hidden;
    gap: var(--grid-mobile-horizontal-spacing);
    position: relative;
    user-select: none;
  }

  .marquee:hover > .scroll {
    animation-play-state: paused;
  }

  .marquee-content {
    display: flex;
    flex-wrap:wrap;
    justify-content: space-around;
    min-width: 100%;
    gap: var(--grid-mobile-horizontal-spacing);
  }

  .marquee-content ~ .marquee-content {
    display: none;
  }

  @media screen and (max-width: 990px) {
    .marquee-content.scroll-mobile {
      flex-shrink: 0;
      animation: scroll 10s linear infinite;
      flex-wrap:nowrap;
    }

    .marquee-content ~ .marquee-content.show-mobile {
      display: flex;
    }

    .marquee-content .marquee__item{
      width:calc((100% - (var(--grid-mobile-horizontal-spacing) * {{ section.blocks.size | minus: 1 }})) / {{ section.settings.columns_mobile }});
      text-align:center;
      {% comment %} min-width:calc((100% - (var(--grid-mobile-horizontal-spacing) * {{ section.blocks.size | minus: 1 }})) / {{ section.settings.columns_mobile }}); {% endcomment %}
    }

    @keyframes scroll {
      from {
        transform: translateX(0);
      }
      to {
        transform: translateX(calc(-100% - var(--grid-mobile-horizontal-spacing)));
      }
    }
  }

  @media screen and (min-width: 990px) {
    .marquee,
    .marquee-content {
      gap: var(--grid-desktop-horizontal-spacing);
    }

    .marquee-content.scroll-desktop {
      flex-shrink: 0;
      animation: scroll 20s linear infinite;
      flex-wrap:nowrap;
    }

    .marquee-content ~ .marquee-content.show-desktop {
      display: flex;
    }

    .marquee-content .marquee__item{
      width:calc((100% - (var(--grid-desktop-horizontal-spacing) * {{ section.blocks.size | minus: 1 }})) / {{ section.settings.columns_desktop }});
      text-align:center;
      min-width:calc((100% - (var(--grid-desktop-horizontal-spacing) * {{ section.blocks.size | minus: 1 }})) / {{ section.settings.columns_desktop }});
    }

    @keyframes scroll {
      from {
        transform: translateX(0);
      }
      to {
        transform: translateX(calc(-100% - var(--grid-desktop-horizontal-spacing)));
      }
    }
  }
</style>

<div
  class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding"
  id="{{ section.id }}"
>
  <div class="marquee page-width">
    <div class="marquee-content scroll {% if section.settings.scroll_mobile %} scroll-mobile{% endif %}{% if section.settings.scroll_desktop %} scroll-desktop{% endif %}">
      {% for block in section.blocks %}
        <div class="marquee__item">
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}">
          {%- endif -%}
          {%- if block.settings.image != blank and block.settings.image.src != blank -%}
            <img
              srcset="{{ block.settings.image | image_url: width: block.settings.image_width }}"
              src="{{ block.settings.image | image_url: width: 190 }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="eager"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {%- endif -%}
          {% if block.settings.text_label != null %}
            <p class="{{ section.settings.text_size }}">{{ block.settings.text_label }}</p>
          {%- endif -%}
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        </div>
      {% endfor %}
    </div>

    {% if section.settings.scroll_mobile or section.settings.scroll_desktop %}
      <div class="marquee-content scroll {% if section.settings.scroll_mobile %} scroll-mobile show-mobile{% endif %}{% if section.settings.scroll_desktop %} scroll-desktop show-desktop{% endif %}">
        {% for block in section.blocks %}
          <div class="marquee__item">
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}">
            {%- endif -%}
            {%- if block.settings.image != blank and block.settings.image.src != blank -%}
              <img
                srcset="{{ block.settings.image | image_url: width: block.settings.image_width }}"
                src="{{ block.settings.image | image_url: width: 190 }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="eager"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
              >
            {%- endif -%}
            {% if block.settings.text_label != null %}
              <p class="{{ section.settings.text_size }}">{{ block.settings.text_label }}</p>
            {%- endif -%}
            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Marquee",
  "tag": "section",
  "class": "section section-marquee",
  "max_blocks": 10,
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "text_size",
      "options": [
        {
          "value": "p",
          "label": "Small"
        },
        {
          "value": "h3",
          "label": "Medium"
        },
        {
          "value": "h2",
          "label": "Large"
        }
      ],
      "default": "p",
      "label": "Text size"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Mobile Layout"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "1",
      "label": "Number of columns on mobile"
    },
    {
      "type": "checkbox",
      "id": "scroll_mobile",
      "default": false,
      "label": "Infinite scroll on mobile"
    },
    {
      "type": "header",
      "content": "Desktop Layout"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Number of columns on desktop"
    },
    {
      "type": "checkbox",
      "id": "scroll_desktop",
      "default": false,
      "label": "Infinite scroll on desktop"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "element",
      "name": "Element",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "inline_richtext",
          "id": "text_label",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee"
    }
  ]
}
{% endschema %}
