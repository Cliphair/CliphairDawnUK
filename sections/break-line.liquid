{% if section.settings['max-width'] != empty %}
  <style>
    #section-{{ section.id }} .break-line{
      max-width:{{ section.settings.max_width }}px;
    }
  </style>
{% endif %}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<style>
  #section-{{ section.id }} .break-line{
    width:100%;
    margin:0 auto;
    height: {{ section.settings.height }}px;
    background:{{ section.settings.bg_color }};
    display:block!important;
  }
</style>

<section
  id="section-{{ section.id }}"
  class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding"
>
  <div class="page-width">
    <div class="break-line"></div>
  </div>
</section>

{% schema %}
{
  "name": "Break Line",
  "settings": [
    {
      "type": "header",
      "content": "Universal Settings"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Colour",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "label": "Max width",
      "info": "Enter the value in px. Ex: 1400, 1250, ...",
      "id": "max_width"
    },
    {
      "type": "range",
      "id": "height",
      "min": 0,
      "max": 10,
      "step": 0.5,
      "unit": "px",
      "label": "Line Height",
      "default": 1
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ]
}
{% endschema %}

