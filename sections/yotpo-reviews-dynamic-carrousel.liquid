      const appKey = "aMREVTSJZfbqjVqxLsKxYMHAmpb94LftONho8TDm";  // Replace with your Yotpo public app key
      const productId = "{{ product.id }}"; // Shopify Liquid product ID or SKU

      const apiUrl = `https://api.yotpo.com/v1/widget/${appKey}/products/${productId}/reviews.json?per_page=50`;

      try {
        const response = await fetch(apiUrl);
        const data = await response.json();

        if (!data.response || !data.response.reviews) {
          console.error("No reviews data found");
          return;
        }

        // Step 1: Filter only 4 or 5-star reviews
        const highRatingReviews = data.response.reviews.filter(r => r.score >= 4);

        // Step 2: Separate reviews with images and without images
        const withImages = highRatingReviews.filter(r => r.images_data && r.images_data.length > 0);
        const withoutImages = highRatingReviews.filter(r => !r.images_data || r.images_data.length === 0);
        
        // Step 3: Sort both arrays by score descending (if you want)
        withImages.sort((a, b) => b.score - a.score);
        withoutImages.sort((a, b) => b.score - a.score);

        // Step 4: Take all with images first, then fill from without images until total 10
        const desiredCount = 10;
        const selectedReviews = [
          ...withImages.slice(0, desiredCount),
          ...withoutImages.slice(0, Math.max(0, desiredCount - withImages.length))
        ];

        // Map to simplified data for your carousel
        const formattedReviews = selectedReviews.map(r => ({
          image: r.images_data?.[0]?.original_url	 || null,
          name: r.user.display_name || "Anonymous",
