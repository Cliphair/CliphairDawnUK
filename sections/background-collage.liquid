{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-background-collage h2{
    font-weight: bold;
    margin-top: 7rem;
  }

  .section-background-collage .rich-text__buttons{
    margin-top: 15rem;
    margin-bottom: 5rem;
  }

  .collage-bg{
    width:100vw;
    display:flex;
    flex-wrap:wrap;
    position:absolute;
  }

  .bg-opacity{
    width:100%;
    height:100%;
    background:black;
    opacity:0;
    display:block!important;
    position:absolute;
  }

  .collage-img{
    width: calc(100% / {{ section.settings.mobile_columns }});
    height: auto;
    display:block;
    aspect-ratio:1;
    object-fit:cover;
    margin:0;
    padding:0;
  }

  @media screen and (max-width: 949px){
    .collage-img.hidden-mobile{
      display:none;
    }
  }

  @media screen and (min-width: 950px){
    .collage-img{
      width: calc(100% / {{ section.settings.desktop_columns }});
    }

    .collage-img.hidden-desktop{
      display:none;
    }
  }
{%- endstyle -%}

{% liquid
  assign mobile-total-images = section.settings.mobile_columns | times: section.settings.mobile_rows
  assign desktop-total-images = section.settings.desktop_columns | times: section.settings.desktop_rows
  assign total-images-indexed = section.blocks.size | minus: 1
  assign current-index = 0

  if mobile-total-images > desktop-total-images
    assign max-images = mobile-total-images
  else
    assign max-images = desktop-total-images
  endif
%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  {% if section.blocks.size > 0 %}
    <div class="collage-bg">
      {% for i in (1..max-images) %}
        {% liquid
          assign block = section.blocks[current-index]
        %}

        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url }}"
            class="collage-img{% if i > mobile-total-images %} hidden-mobile{% endif %}{% if i > desktop-total-images %} hidden-desktop{% endif %}"
          >
        {% endif %}

        {% liquid
          if current-index < total-images-indexed
            assign current-index = current-index | plus: 1
          else
            assign current-index = 0
          endif
        %}
      {% endfor %}
      <div class="bg-opacity"></div>
    </div>
  {% endif %}

  <div class="rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {% if section.settings.heading != blank %}
          <h2
            class="rich-text__heading rte inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: 1;"
            {% endif %}
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.text != blank %}
          <div
            class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: 2;"
            {% endif %}
          >
            {{ section.settings.text }}
          </div>
        {% endif %}

        {% if section.settings.button_label != blank %}
          <div
            class="rich-text__buttons{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: 3;"
            {% endif %}
          >
            <a
              {% if section.settings.button_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.button_link }}"
              {% endif %}
              class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
            >
              {{- section.settings.button_label | escape -}}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% comment %}
  <script>
    let container = document.querySelector('.section-background-collage');
    let width = container.clientWidth;
    let height = container.clientHeight;
    let images = container.querySelectorAll('.collage-img');
    let imgHeight = height / 3;
    let imgWidth = width / 2;

    for (let image of images) {
      image.style.width = imgWidth + 'px';
      image.style.height = imgHeight + 'px';
    }

    console.log(width);
    console.log(height);
  </script>
{% endcomment %}

