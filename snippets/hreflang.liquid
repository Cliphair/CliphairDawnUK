{% comment %}Hreflang homepage{% endcomment %}
{% if request.page_type == "index" %}
  <link rel="alternate" hreflang="en-US" href="{{ canonical_url | replace: shop.domain, 'www.cliphair.com' }}" />
  <link rel="alternate" hreflang="de-DE" href="{{ canonical_url | replace: shop.domain, 'www.cliphair.com/de-de' }}" />
