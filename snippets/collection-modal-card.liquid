<style>
  .videos-list__item {
    min-width: 300px;
  }

  .collection-modal-card {
    border: 1px solid;
    margin-top: 1rem;
  }

  .collection-modal-card .grid {
    flex-wrap: nowrap;
  }

  .collection-modal-card__image-wrapper {
    width: 40%;
    flex-grow: 0;
    flex-shrink: 0;
  }

  .collection-modal-card__text-wrapper {
    padding: 1.5rem;
    flex-grow: 1;
  }

