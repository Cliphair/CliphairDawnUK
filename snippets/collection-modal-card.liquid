      id="ModalClose-{{ block.id }}"
      type="button"
      class=""
      aria-label="{{ 'accessibility.close' | t }}"
    >
      {% render 'icon-close' %}
    </button>
    <div>
      <div class="grid">
        <div>image</div>
        <div>Content</div>
      </div>
    </div>
  </div>
</modal-dialog>
